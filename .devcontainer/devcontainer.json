// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.101.0/containers/docker-in-docker
{
    "name": "Docker in Pybuntu",
    "dockerFile": "Dockerfile",
    "runArgs": [
        "--init"
    ],
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=hourglass-bashhistory,target=/commandhistory,type=volume",
        "source=hourglass-extensions,target=/home/erin/.vscode-server-insiders/extensions,type=volume",
        "source=virtualenvs,target=/home/erin/.local/virtualenvs,type=volume"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/code,type=bind,consistency=delegated",
    "workspaceFolder": "/code",
    // Set *default* container specific settings.json values on container create.
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "bungcip.better-toml",
        "coenraads.bracket-pair-colorizer-2",
        "waderyan.gitblame",
        "oderwat.indent-rainbow",
        "redhat.vscode-yaml",
        "timonwong.shellcheck",
        "visualstudioexptteam.vscodeintellicode",
        "ms-azuretools.vscode-docker",
        "ms-python.vscode-pylance"
    ],
    "shutdownAction": "stopContainer",
    // "postCreateCommand": "sudo /usr/local/src/script.sh",
    "remoteUser": "erin",
}